<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorCustBk"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        style="@style/Base.CardView"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_gravity="center"
        android:background="?android:attr/fastScrollPreviewBackgroundLeft"
        android:padding="35dp"
        app:cardBackgroundColor="@color/colorCust1"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:elevation="0dp"
                android:src="@drawable/sunrise" />

            <TextView
                android:id="@+id/tvId"
                android:layout_width="18dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/tvPhNum"
                android:layout_marginHorizontal="@dimen/cardview_compat_inset_shadow"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/imageView"
                android:background="@drawable/mrect"
                android:elevation="2dp"
                android:gravity="center"
                android:text="ID"
                android:textAlignment="center"
                app:layout_constraintVertical_bias="0.509" />

            <TextView
                android:id="@+id/tvPhNum"
                android:layout_width="78dp"
                android:layout_height="36dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/tvId"
                android:background="@drawable/mrect"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:text="Phone Number"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/tvId"
                android:layout_marginHorizontal="@dimen/cardview_default_radius"
                android:background="@drawable/mrect"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:text="Link"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.512" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>